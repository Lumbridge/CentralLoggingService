@{
    ViewBag.Title = "Alerts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model  List<CLS.Core.Data.Subscription>

<h2>Alerts</h2>

<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">
            <table class="table table-sm table-bordered table-striped table-dark">
                <thead>
                <tr>
                    <th>Publishing System</th>
                    <th>Environment</th>
                    <th>Subscriber Name</th>
                    <th>Subscriber Email</th>
                    <th>Alert Trigger Expression</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr data-id=@item.Id>
                        <td>@item.PublishingSystem.Name</td>
                        <td>@item.PublishingSystem.EnvironmentType.Name</td>
                        <td>@item.Subscriber.Name</td>
                        <td>@item.Subscriber.Email</td>
                        <td>@item.AlertTriggerGroup.ExpressionString</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
        <button id="newAlertButton" type="button" class="btn btn-secondary">+ New Alert</button>
    </div>
</div>