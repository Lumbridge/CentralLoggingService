
@model List<CLS.Core.Data.User>

<div class="table-responsive">
    <table class="table table-sm table-bordered table-striped table-dark">
        <thead>
            <tr>
                <th>Email</th>
                <th>Number of Subscriptions</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr data-id=@item.Id>
                    <td>@item.Email</td>
                    <td>@item.Subscriptions.Count</td>
                    <td><button data-subscriberId="@item.Id" type="button" class="btn btn-outline-danger deleteSubscriberButton"><i class="fas fa-trash"></i></button></td>
                </tr>
            }
        </tbody>
    </table>
</div>
<button id="newSubscriberButton" type="button" class="btn btn-secondary">+ New Subscriber</button>

<script>
    $(function() {
        $("table").DataTable();
    });
</script>