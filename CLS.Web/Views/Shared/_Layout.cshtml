<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")

    @{
        var controller = (string)Request.RequestContext.RouteData.Values["controller"];
        var refreshController = (string)Session["refreshController"];
        var scriptFile = $"Scripts/Application/{controller}.js";
    }
</head>
<body class="bg-dark">
    <div id="page-container">
        <div id="content-wrap">
            <input type="hidden" id="APPLICATION_PATH" value="@Request.ApplicationPath" />
            <input type="hidden" id="REFRESHCONTROLLER" value="@refreshController" />

            <!-- navbar -->
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-3 border-bottom">
                <div class="flex-row d-flex">
                    <a class="navbar-brand mb-1" href="/Home">CLS</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsingNavbar">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>
                <div class="navbar-collapse collapse" id="collapsingNavbar">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="/Home">Home</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown">
                                Logs
                            </a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="/Logs/Debug">Debug</a>
                                <a class="dropdown-item" href="/Logs/Info">Info</a>
                                <a class="dropdown-item" href="/Logs/Warn">Warn</a>
                                <a class="dropdown-item" href="/Logs/Error">Error</a>
                                <a class="dropdown-item" href="/Logs/Fatal">Fatal</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Alerts">Alerts</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="" data-target="#myModal" data-toggle="modal">About</a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- render main view -->
            <div class="container-fluid body-content" id="main">
                @RenderBody()
            </div>

            <!-- render footer -->
            <footer id="footer" class="pt-4">
                <!-- Footer Links -->
                <div id="footerContainer" class="footer-body container-fluid text-center text-md-left">
                    <!-- Grid row -->
                    <div class="row">
                        <div class="col-md-3 mt-md-0 mt-3 text-center">
                            <img src="~/Images/pepeflower.png" style="margin-bottom: 15px; width: 25%;" alt="Footer Logo"/>
                        </div>
                        <!-- Grid column -->
                        <div class="col-md-3 mt-md-0 mt-3">
                            <!-- Content -->
                            <h5 class="text-uppercase text-white"><b>Central Logging Service</b></h5>
                            <p class="text-white">
                                Welcome to the CLS Dashboard.
                            </p>
                        </div>
                        <!-- Grid column -->
                        <hr class="clearfix w-100 d-md-none pb-3">
                        <!-- Grid column -->
                        <div class="col-md-3 mb-md-0 mb-3">
                            <!-- Footer links left -->
                            <h5 class="text-uppercase text-white"><b>Footer links left</b></h5>
                            <ul class="list-unstyled">
                                <li>
                                    <a href="#">footer link left 1</a>
                                </li>
                                <li>
                                    <a href="#">footer link left 2</a>
                                </li>
                                <li>
                                    <a href="#">footer link left 3</a>
                                </li>
                                <li>
                                    <a href="#">footer link left 4</a>
                                </li>
                            </ul>
                        </div>
                        <!-- Grid column -->
                        <div class="col-md-3 mb-md-0 mb-3">
                            <!-- Footer links right -->
                            <h5 class="text-uppercase text-white"><b>Footer links right</b></h5>
                            <ul class="list-unstyled">
                                <li>
                                    <a href="#">footer link right 1</a>
                                </li>
                                <li>
                                    <a href="#">footer link right 2</a>
                                </li>
                                <li>
                                    <a href="#">footer link right 3</a>
                                </li>
                                <li>
                                    <a href="#">footer link right 4</a>
                                </li>
                            </ul>
                        </div>
                        <!-- Grid column -->
                    </div>
                    <!-- Grid row -->
                </div>
                <!-- Footer Links -->
                <!-- Copyright -->
                <div class="footer-footer text-center text-white py-3">
                    Central Logging Service © @DateTime.Now.Year Copyright:
                    <a href="https://github.com/lumbridge"> Github/Lumbridge</a>
                </div>
                <!-- Copyright -->
            </footer>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="myModalLabel">About</h4>
                </div>
                <div class="modal-body text-center">
                    Central Logging Service © @DateTime.Now.Year Copyright <a href="https://github.com/lumbridge"> Github/Lumbridge</a>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary-outline" data-dismiss="modal">OK</button>
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/application")

    <script src="~/@scriptFile"></script>

    @RenderSection("scripts", required: false)

</body>
</html>