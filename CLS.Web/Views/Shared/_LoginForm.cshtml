
@model CLS.Web.Models.LoginModel

@using (Html.BeginForm("Login", "Base", FormMethod.Post, new { id = "LoginForm", @class = "ajaxform" }))
{
    <div class="form-group">
        <label for="Email">Email address</label>
        @Html.TextBoxFor(x => x.Email, new { @class = "form-control", type = "email" })
    </div>
    <div class="form-group">
        <label for="Password">Password</label>
        @Html.TextBoxFor(x => x.Password, new { @class = "form-control", type = "password" })
    </div>
    <div class="form-group form-check">
        @Html.CheckBoxFor(x => x.RememberMe, new { @class = "form-check-input", type = "checkbox" })
        <label class="form-check-label" for="RememberMe">Remember Me</label>
    </div>
    <div class="form-group">
        <div id="ErrorMessage" class="alert alert-danger d-none" role="alert"></div>
    </div>
    <div class="form-group">
        <small class="form-text text-muted">No account? Register @(Html.ActionLink("here", "Index", "Register")).</small>
    </div>
}
<button id="SubmitLogin" class="btn btn-primary">Login</button>