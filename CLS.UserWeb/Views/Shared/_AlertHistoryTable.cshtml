
@model  List<CLS.Core.Data.AlertHistory>

<div class="table-responsive">
    <table class="table table-sm table-bordered table-striped">
        <thead>
            <tr>
                <th>Time of Alert</th>
                <th>Log Message Count</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr data-id=@item.Id>
                    <td>@item.Timestamp</td>
                    <td>@item.SiblingCount</td>
                    <td><a role="button" class="btn btn-outline-info" href="@Url.Action("Index", "AlertHistory", new { alertHistoryGroupId = item.AlertHistoryGroupId})"><i class="fas fa-chevron-right"></i></a></td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    $(function () {
        $("table").DataTable({
            "order": [[0, "desc"]]
        });
    });
</script>