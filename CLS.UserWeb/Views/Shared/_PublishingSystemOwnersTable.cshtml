
@model List<CLS.Core.Data.PublishingSystemOwner>

<div class="table-responsive">
    <table class="table table-sm table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderByDescending(x => x.AspNetUser.UserName))
            {
                <tr data-id=@item.PublishingSystemOwnersId>
                    <td>@item.AspNetUser.UserName</td>
                    <td><button data-publishingsystemname="@Model.First().PublishingSystem.Name" data-username="@item.AspNetUser.UserName" type="button" class="btn btn-outline-danger removePublishingSystemOwnerButton"><i class="fas fa-trash"></i></button></td>
                </tr>
            }
        </tbody>
    </table>
</div>
<button data-publishingsystemname="@Model.First().PublishingSystem.Name" id="newOwnerButton" type="button" class="btn btn-secondary">+ Add Owner</button>

<script>
    $(function() {
        $("table").DataTable();
    });
</script>